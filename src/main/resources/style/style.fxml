<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="640.0" styleClass="background" stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.nicolasdelp.quoridor.FXMLController">
  <children>
    <AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="800.0" VBox.vgrow="ALWAYS">
      <children>
            <ImageView fitHeight="70.0" fitWidth="361.0" layoutX="222.0" layoutY="78.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/titre.png" />
               </image>
            </ImageView>
            <Pane fx:id="menuPane" layoutX="207.0" layoutY="166.0" prefHeight="283.0" prefWidth="390.0">
               <children>
                  <Button fx:id="resumeGameButton" defaultButton="true" layoutX="45.0" layoutY="44.0" mnemonicParsing="false" onAction="#resumeGame" prefHeight="45.0" prefWidth="300.0" styleClass="button1" stylesheets="@stylesheet.css" text="REPRENDRE LA PARTIE" textAlignment="CENTER" textFill="WHITE">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="newGameButton" defaultButton="true" layoutX="45.0" layoutY="104.0" mnemonicParsing="false" onAction="#newGame" prefHeight="45.0" prefWidth="300.0" styleClass="button2" text="NOUVELLE PARTIE" textAlignment="CENTER" textFill="WHITE">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="optionButton" defaultButton="true" layoutX="45.0" layoutY="164.0" mnemonicParsing="false" onAction="#option" prefHeight="45.0" prefWidth="300.0" styleClass="button3" text="OPTIONS" textAlignment="CENTER" textFill="WHITE">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="creditsButton" defaultButton="true" layoutX="46.0" layoutY="224.0" mnemonicParsing="false" onAction="#credits" prefHeight="45.0" prefWidth="300.0" styleClass="button4" text="CREDITS" textAlignment="CENTER" textFill="WHITE">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
            </Pane>
      </children>
    </AnchorPane>
  </children>
</VBox>
